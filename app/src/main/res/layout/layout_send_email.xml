<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_8sdp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Share Files"
        android:gravity="center"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sender_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pengirim"
            android:gravity="center"
            android:layout_weight="2.5"
            android:layout_marginStart="@dimen/_8sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/edt_sender_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pengirim"
            android:padding="@dimen/_8sdp"
            android:layout_weight="1"
            android:inputType="text"
            android:lines="1"
            android:maxLines="1"
            android:maxLength="100"
            android:background="@drawable/bg_rounded_gray"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_receiver_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Penerima"
            android:gravity="center"
            android:layout_weight="2.5"
            android:layout_marginStart="@dimen/_8sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <EditText
            android:id="@+id/edt_receiver_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email Penerima"
            android:padding="@dimen/_8sdp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:maxLength="100"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_rounded_gray"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Judul Email"
        android:gravity="left"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp" />
        <EditText
            android:id="@+id/edt_title_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Judul Email"
            android:padding="@dimen/_8sdp"
            android:layout_weight="1"
            android:lines="1"
            android:maxLines="1"
            android:maxLength="250"
            android:textStyle="bold"
            android:inputType="text"
            android:background="@drawable/bg_rounded_gray"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Body Email"
        android:gravity="left"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/edt_body_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Body Email"
        android:padding="@dimen/_8sdp"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:background="@drawable/bg_rounded_gray"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:text="Send"
        android:textAllCaps="false" />
</LinearLayout>